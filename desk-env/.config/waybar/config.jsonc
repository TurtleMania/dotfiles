// -*- mode: jsonc -*-
{
    "layer": "bot",
    "spacing": 8,
    "margin-bottom": 0,
    "margin-top": 10,
    "position": "top",
    "margin-right": 10,
    "margin-left": 10,

    "reload_style_on_change": true,

    "modules-left": [
        "custom/arch",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "mpris"
    ],
    "modules-right": [
        "group/hardware",
        "privacy",
        "backlight",
        "pulseaudio",
        "battery",
        "clock"
    ],

    "hyprland/workspaces": {
        "format": "",
        "persistent-workspaces": {
            "*": 4
        }
    },

    "custom/arch": {
        "format": "󰣇"
    },
    "mpris": {
        "format": "{status_icon}  {dynamic} {player_icon} ",
        "interval": 1,
        "ignored-players": [
            "firefox"
        ],
        "player-icons": {
            "ncspot": "󰓇"
        },
        "status-icons": {
            "playing": "",
            "paused": "",
            "stopped": ""
        },
        "dynamic-order": [
            "artist",
            "title",
            "position",
            "length"
        ]
    },

    "backlight": {
        "format": "{icon}",
        "tooltip-format": "{percent}%",
        "format-icons": [
            "🌑", "🌘", "🌘", "🌘", "🌗", "🌗", "🌗", "🌗", "🌗",
            "🌖", "🌖", "🌖", "🌖", "🌖", "🌖", "🌖", "🌖", "🌕",
            "🌕"
        ] // Hacky thing to work with exponential brightness
    },
    "pulseaudio": {
        "format": "{icon} ",
        "format-muted": " ",
        "tooltip-format": "{volume}%",
        "format-icons": [
            "", "", ""
        ]
    },
    "battery": {
        "format": "{icon}",
        "tooltip-format": "{capacity}% {timeTo}",
        "format-icons": [
            "󰂎", "󰁺", "󰁻", "󰁼", "󰁽", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"
        ]
    },
    "clock": {
        "tooltip-format": "<tt>{calendar}</tt>",
    },
    "privacy": {
        "modules": [
            {
                "type": "screenshare",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-out",
                "tooltip": true,
                "tooltip-icon-size": 24
            },
            {
                "type": "audio-in",
                "tooltip": true,
                "tooltip-icon-size": 24
            }
        ],
    },
    "group/hardware": {
        "orientation": "inherit",
        "drawer": {},
        "modules": [
            "custom/hardware-icon",
            "cpu",
            "memory",
            "memory#swap",
            "disk",
            "temperature",
            "network"
        ]
    },
    "custom/hardware-icon": {
        "format": "󰇅"
    },
    "cpu": {
        "format": "  {usage}%  "
    },
    "memory": {
        "format": " {percentage}%  ",
        "tooltip-format": "{used:0.1f} / {total:0.1f} GiB used"
    },
    "memory#swap": {
        "format": " {swapPercentage}% 󰓡 ",
        "tooltip-format": "{swapUsed:0.1f} / {swapTotal:0.1f} GiB used"
    },
    "disk": {
        "format": "{percentage_used}%  ",
        "tooltip-format": "{used} / {total} used on \"{path}\""
    },
    "temperature": {
        "format": "{icon}",
        "tooltip-format": "{temperatureC}󰔄 ",
        "format-icons": [
            "", "", "", "", ""
        ]
    },
    "network": {
        "format": "{ifname}",
        "format-ethernet": "",
        "format-wifi": " {icon} ",
        "format-disconnected": "󰤭",
        "format-disabled": "",
        "tooltip-format": "",
        "tooltip-format-ethernet": "{ifname}",
        "tooltip-format-wifi": "Frequency: {frequency}\nSignal Strength: {signalStrength}%\nUpload: {bandwidthUpBytes}\nDownload: {bandwidthDownBytes}",
        "tooltip-format-disconnected": "Disconnected",
        "tooltip-format-disabled": "",
        "format-icons": [
            "󰤯", "󰤟", "󰤢", "󰤥", "󰤨"
        ]
    }
}
